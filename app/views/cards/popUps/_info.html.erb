<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel"><%= @card.name %></h4>
    </div>
    <div class="modal-body">
      <div class="well">
        <div class="media">
          <a class="pull-left" href="#">
            <img class="media-object img-thumbnail" src="http://4.bp.blogspot.com/-eeOpU2dlaE8/TuSULJIiA5I/AAAAAAAABqc/pMHOdgmsx_E/s1600/pato.jpg" alt="pato">
          </a>
          <div class="media-body">
            <div class="text-justify"><%= @card.description %></div>
            <span class="pull-right text-muted"><%= @card.genre %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>