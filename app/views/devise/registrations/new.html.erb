<%= devise_error_messages! %>
<div class="panel panel-default signUp">
  <div class="panel-heading"><h3 class="panel-title"><%= t(:Sign_up) %></h3></div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div class="form-horizontal" role="form">
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Name) %></label>
          <div class="col-sm-10">
            <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => t(:Name) %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Last_name) %></label>
          <div class="col-sm-10">
            <%= f.text_field :lastName, :class => "form-control", :placeholder => t(:Last_name) %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Email) %></label>
          <div class="col-sm-10">
            <%= f.email_field :email, :class => "form-control", :placeholder => t(:Email) %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Password) %></label>
          <div class="col-sm-10">
            <%= f.password_field :password, :class => "form-control", :placeholder => t(:Password) %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Confirmation) %></label>
          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => t(:Password_confirmation) %>
          </div>
        </div>

        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Language) %></label>
          <div class="col-sm-10">
            <select class="form-control" id="user_language" name="user[language]">
              <option value="ca"><%= t(:ca) %></option>
              <option value="es"><%= t(:es) %></option>
              <option value="en"><%= t(:en) %></option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit t(:Sign_up), :class => "btn btn-success" %>
          </div>
        </div>

        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>