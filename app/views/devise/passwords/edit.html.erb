<%= devise_error_messages! %>
<div class="panel panel-default signIn">
	<div class="panel-heading"><h3 class="panel-title"><%= t(:Change_your_password) %></h3></div>
	<div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
			<%= f.hidden_field :reset_password_token %>
			<div class="form-horizontal" role="form">
				<div class="form-group">
					<label for="inputEmail3" class="col-sm-2 control-label"><%= t(:New_password) %></label>
					<div class="col-sm-10">
						<%= f.password_field :password, :autofocus => true, :class => "form-control", :placeholder => t(:New_password) %>
					</div>
				</div>

				<div class="form-group">
					<label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Confirm_new_password) %></label>
					<div class="col-sm-10">
						<%= f.password_field :password_confirmation, :class => "form-control", :placeholder => t(:Confirm_new_password) %>
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit t(:Change_my_password), :class => "btn btn-success" %>
					</div>
				</div>

				<%= render "devise/shared/links" %>
			</div>
		<% end %>
	</div>
</div>