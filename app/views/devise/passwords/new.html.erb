<%= devise_error_messages! %>
<div class="panel panel-default signIn">
	<div class="panel-heading"><h3 class="panel-title"><%= t(:Forgot_your_password) %></h3></div>
	<div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			<div class="form-horizontal" role="form">
				<div class="form-group">
					<label for="inputEmail3" class="col-sm-2 control-label"><%= t(:Email) %></label>
					<div class="col-sm-10">
						<%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => t(:Email) %>
					</div>
				</div>

				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit t(:Send_me_reset_password_instructions), :class => "btn btn-success" %>
					</div>
				</div>

				<%= render "devise/shared/links" %>
			</div>
		<% end %>
	</div>
</div>